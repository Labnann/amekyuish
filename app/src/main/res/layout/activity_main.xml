<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/equalSign"
        android:layout_width="103dp"
        android:layout_height="0dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/background_dark"
        android:text="="
        android:textColor="@android:color/white"
        android:textSize="70dp"
        app:layout_constraintBottom_toTopOf="@+id/copier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465" />

    <EditText
        android:id="@+id/editor"
        android:layout_width="206dp"
        android:layout_height="141dp"

        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/viewer"
        app:layout_constraintEnd_toStartOf="@+id/equalSign"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/viewer"
        app:layout_constraintTop_toTopOf="@+id/equalSign"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/viewer"
        android:layout_width="309dp"
        android:layout_height="251dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="144dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/equalSign"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/copier"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/copier"
        android:layout_width="108dp"
        android:layout_height="39dp"
        android:layout_marginBottom="397dp"
        android:background="@android:color/holo_blue_dark"

        android:text="Copy"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/equalSign"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/equalSign"
        app:layout_constraintTop_toBottomOf="@+id/equalSign" />

    <Button
        android:id="@+id/clearer"
        android:layout_width="49dp"
        android:layout_height="42dp"
        android:background="@android:color/black"
        android:text="âœ¨"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/editor"
        app:layout_constraintEnd_toEndOf="@+id/editor"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editor"
        app:layout_constraintTop_toTopOf="@+id/editor"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>